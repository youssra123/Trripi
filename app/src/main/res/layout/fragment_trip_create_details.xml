<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            tools:context="com.tripper.tripper.trip.fragment.TripCreateDetails">

            <!-- ~~~~~~~~~~~~~~~~~~ Photo ~~~~~~~~~~~~~~~~~~~ -->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp">

                <com.tripper.tripper.views.CustomImageView
                    android:id="@+id/trip_create_details_photo_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_no_image"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/trip_create_details_photo_image_view"
                    android:layout_alignBottom="@id/trip_create_details_photo_image_view"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="20dp"
                    android:src="@android:drawable/ic_menu_camera" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">



                <!-- ~~~~~~~~~~~~~~~~~~ Place ~~~~~~~~~~~~~~~~~~~ -->
                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/trip_create_details_place_text"-->
                    <!--android:textSize="@dimen/detail_text_size_extra_small"-->
                    <!--android:visibility="visible"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/trip_create_details_place_edit_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/trip_create_details_place_text"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textSize="@dimen/detail_text_size_medium"/>

                </LinearLayout>


                <!-- ~~~~~~~~~~~~~~~~~~ Description ~~~~~~~~~~~~~~~~~~~ -->
                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/trip_create_details_description_text"-->
                    <!--android:textSize="@dimen/detail_text_size_extra_small"-->
                    <!--android:visibility="visible"/>-->

                <EditText
                    android:id="@+id/trip_create_details_description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:clickable="true"
                    android:focusable="false"
                    android:gravity="start"
                    android:hint="@string/trip_create_details_description_text"
                    android:lines="4"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/detail_text_size_medium"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/trip_create_details_done_floating_action_button"
        style="@style/FloatingActionButtonCoordinatorLayoutStyle"
        android:src="@drawable/ic_done_black_24dp" />

</android.support.design.widget.CoordinatorLayout>

